@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-lg-offset-4 col-md-offset-4">
        <h2>Регистрация</h2>
        <form action="@Url.Action("RegistrationForm", "Home")" method="post">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-sm-4">
                        <label for="name">Имя : </label>
                        <input type="text" name="Name" id="name" class="form-control" /><br />
                        <label for="surname">Фамилия:</label>
                        <input type="text" name="Surname" id="surname" class="form-control" /><br />
                        <input class="btn btn-block btn-lg btn-primary" type="submit" name="secondTest" value="Начать Основной Тест">
                        <input class="btn btn-block btn-lg btn-primary" type="submit" name="firstTest" value="Пройти Тест по ТМ">
                    </div>
                    <div class="col-sm-4">
                        <div class="alert alert-info text-center" role="alert">
                            <div class="alert">
                                <strong>Внимание!</strong>
                                <hr />
                                Для начала Вы можете пройти тест по определению типа конституции тела, либо пропустить и сразу начать основное тестирование.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>



    </div>
</div>